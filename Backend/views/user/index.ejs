<%- contentFor('body') %>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">المستخدمين</li>
    </ol>
</nav>
<div class="card">
    <div class="card-header">
        <a href="/add-user" class="btn btn-info">
            اضافة مستخدم
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-sm table-bordered border-dark table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>اسم المستخدم</th>
                    <th>البريد الاكتروني </th>
                 
                    <th>العمليات</th>
                </tr>
                </thead>
                <tbody class="table-group-divider">
                <% theData.forEach((item, index)=>{ %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= item.name %></td>
                        <td><%= item.email %></td>
                  
                        <td>
                            <a class="btn btn-sm btn-danger" href="/delete-user/<%= item.id %>">
حذف
                            </a>

                        </td>
                    </tr>
                <% }) %>
                </tbody>

            </table>
        </div>
    </div>
</div>


 

     




